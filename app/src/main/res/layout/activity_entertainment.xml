<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3F3"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar with back button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Entertainment"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#8A4C7D"/>
        </LinearLayout>

        <!-- Entertainer 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/djAshCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dj_ash"
                    android:contentDescription="DJ Ash"/>

                <!-- Favorite Heart Button -->
                <ImageButton
                    android:id="@+id/djAshFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_heart_outline"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add to favorites"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DJ Ash"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4.5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating: 4.8 (500+ bookings)"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <Button
                        android:id="@+id/djAshButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit Website"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#8A4C7D"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Entertainer 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/umaCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uma_dancing"
                    android:contentDescription="Uma Dancing"/>

                <!-- Favorite Heart Button -->
                <ImageButton
                    android:id="@+id/umaFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_heart_outline"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add to favorites"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uma Dancing Troupe"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4.7"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating: 4.7 (400+ bookings)"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <Button
                        android:id="@+id/umaButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit Website"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#8A4C7D"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Entertainer 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/budhawaththaCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/budhawaththa"
                    android:contentDescription="Budhawaththa Dancing Academy"/>

                <!-- Favorite Heart Button -->
                <ImageButton
                    android:id="@+id/budhawaththaFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_heart_outline"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add to favorites"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Budhawaththa Dance Troupe"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4.6"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating: 4.6 (600+ bookings)"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <Button
                        android:id="@+id/budhawaththaButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit Website"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#8A4C7D"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>