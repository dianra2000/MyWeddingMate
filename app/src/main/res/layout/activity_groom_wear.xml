<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3F3"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar with back button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Groom Wear"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#8A4C7D"/>
        </LinearLayout>

        <!-- Supplier 1 - Ramani Brothers -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ramaniCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ramani_brothers"
                    android:contentDescription="Ramani Brothers"/>

                <ImageButton
                    android:id="@+id/ramaniFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_heart_outline"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add to favorites"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ramani Brothers"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4.8"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating: 4.8 (1200+ grooms)"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <Button
                        android:id="@+id/ramaniButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit Website"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#8A4C7D"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Supplier 2 - Dinesh Clothing -->
        <androidx.cardview.widget.CardView
            android:id="@+id/dineshCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dinesh_clothing"
                    android:contentDescription="Dinesh Clothing"/>

                <ImageButton
                    android:id="@+id/dineshFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_heart_outline"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add to favorites"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dinesh Clothing"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4.7"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating: 4.7 (900+ grooms)"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <Button
                        android:id="@+id/dineshButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit Website"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#8A4C7D"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Supplier 3 - House of Fashion -->
        <androidx.cardview.widget.CardView
            android:id="@+id/houseOfFashionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/house_of_fashion"
                    android:contentDescription="House of Fashion"/>

                <ImageButton
                    android:id="@+id/houseOfFashionFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_heart_outline"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add to favorites"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="House of Fashion"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4.6"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating: 4.6 (800+ grooms)"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <Button
                        android:id="@+id/houseOfFashionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit Website"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#8A4C7D"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Supplier 4 - British Dress -->
        <androidx.cardview.widget.CardView
            android:id="@+id/britishDressCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/british_dress"
                    android:contentDescription="British Dress"/>

                <ImageButton
                    android:id="@+id/britishDressFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_heart_outline"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add to favorites"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="British Dress"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4.5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating: 4.5 (700+ grooms)"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <Button
                        android:id="@+id/britishDressButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit Website"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#8A4C7D"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>