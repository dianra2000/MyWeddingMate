<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_above="@+id/navBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- top of the pge - welcome.... -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Your"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wedding Planning Journey"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_brown"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plan your perfect day with our comprehensive tools"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

            <!-- cople btn card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Couple Features"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_brown"
                        android:layout_marginBottom="16dp" />

                    <!-- Profile Button -->
                    <Button
                        android:id="@+id/btn_profile"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="COUPLE PROFILE"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:drawableStart="@drawable/ic_profile"
                        android:drawableTint="@color/white"
                        android:backgroundTint="@color/primary_brown"
                        android:drawablePadding="8dp" />

                    <!-- Wedding Planners Button -->
                    <Button
                        android:id="@+id/btn_planners"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/primary_brown"
                        android:layout_marginBottom="12dp"
                        android:drawableStart="@drawable/ic_people"
                        android:drawableTint="@color/white"
                        android:drawablePadding="8dp"
                        android:text="Select Wedding Planner"
                        android:onClick="navigateToWeddingPlanners"/>

                    <!-- Vendors Button -->
                    <Button
                        android:id="@+id/btn_vendors"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="SELECT VENDORS"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/primary_brown"
                        android:layout_marginBottom="12dp"
                        android:drawableStart="@drawable/ic_business"
                        android:drawableTint="@color/white"
                        android:drawablePadding="8dp" />

                    <!-- Budget Button -->
                    <Button
                        android:id="@+id/btn_budget"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="BUDGET OVERVIEW"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/primary_brown"
                        android:drawableStart="@drawable/ic_money"
                        android:drawableTint="@color/white"
                        android:drawablePadding="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- NavBar-->
    <include
        android:id="@+id/navBar"
        layout="@layout/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
